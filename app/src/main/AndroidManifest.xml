<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.parvarish_nutricalculator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.StartScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.LaunchScreen"
            android:label="@string/title_activity_launch_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginScreen"
            android:label="@string/title_activity_login_screen" >
        </activity>
        <activity
            android:name=".ui.SignupScreen"
            android:label="@string/title_activity_signup_screen" >
        </activity>
        <activity
            android:name=".ui.HomeScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name=".ui.FriendsScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name=".ui.FriendsFeedsScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name=".ui.ProfileScreen"
            android:label="@string/title_activity_profile_screen" >
        </activity>
        <activity
            android:name=".ui.AddRecipeWebScreen"
            android:label="@string/title_activity_add_recipe_web_screen" >
        </activity>
        <activity
            android:name=".ui.AddRecipeManualScreen"
            android:label="@string/title_activity_add_recipe_manual_screen" >
        </activity>
    </application>

</manifest>
