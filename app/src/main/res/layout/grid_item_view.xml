<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:drakeet="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.parvarish_nutricalculator.ui.ProfileScreen">

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:background="@drawable/square_background_gridview"
        android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:scaleType="fitXY"
    android:id="@+id/image"
    android:layout_margin="4dp"

    android:src="@mipmap/ic_launcher"
    android:layout_width="@dimen/nutrition_image"
    android:layout_height="@dimen/nutrition_image" />

</LinearLayout>
    <TextView
        android:singleLine="true"
        android:textColor="#494949"
        android:textSize="@dimen/normal_text"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/txtTitle"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>