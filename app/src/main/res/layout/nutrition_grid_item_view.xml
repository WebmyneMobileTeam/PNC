<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center"
    xmlns:drakeet="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.parvarish_nutricalculator.ui.ProfileScreen">

    <LinearLayout
        android:background="@drawable/square_background_nutrtion_main"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/square_background_nutrtion_submain"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="4dp"
                android:id="@+id/image"
                android:layout_margin="4dp"
                android:layout_width="@dimen/nutrition_image"
                android:layout_height="@dimen/nutrition_image" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtSubtitle"
            android:padding="12dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="CEREALS"
            android:layout_width="@dimen/nutrition_text"
            android:singleLine="true"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>