<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:drakeet="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.parvarish_nutricalculator.ui.ProfileScreen">

    <include layout="@layout/app_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@color/color_button_darkred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/leftwhite_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/profileTitle"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="My Profile"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:background="@drawable/rightwhite_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/white_heart"
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <com.facebook.login.widget.LoginButton
                    android:visibility="gone"
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp" />

              <me.drakeet.library.UIButton
                    android:layout_marginTop="10dp"
                    android:id="@+id/btnLoginFacebook"
                    android:text="Connect with Facebook"
                    style="@style/full_button_facebook"
                    drakeet:alpha_pressed="80"
                    drakeet:color_pressed="#464646" />


                <EditText
                    android:layout_marginTop="15dp"
                    android:id="@+id/edSignUpUserName"
                    android:drawablePadding="16dp"
                    android:hint="username"
                    android:drawableLeft="@drawable/ic_user"
                    style="@style/edittext_login" />

                <EditText
                    android:id="@+id/edSignUpPassword"
                    android:drawablePadding="16dp"
                    android:inputType="textPassword"
                    android:hint="password"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/ic_lock"
                    style="@style/edittext_login" />


                <EditText
                    android:id="@+id/edSignUpEmail"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="16dp"
                    android:hint="email"
                    android:drawableLeft="@drawable/ic_msg"
                    style="@style/edittext_login" />



                <EditText
                    android:inputType="number"
                    android:maxLength="11"
                    android:id="@+id/edSignUpMobile"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="16dp"
                    android:hint="mobile"
                    android:drawableLeft="@drawable/ic_phone"
                    style="@style/edittext_login" />


                <EditText
                    android:id="@+id/edSignUpCity"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="16dp"
                    android:hint="city"
                    android:drawableLeft="@drawable/ic_city"
                    style="@style/edittext_login" />

                <LinearLayout
                    android:layout_marginTop="8dp"
                    style="@style/both_match_wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:id="@+id/btnChangePassword"
                        android:text="Change Password"
                        android:inputType="textCapCharacters"
                        style="@style/button_forgotPassword" />

                    <Button
                        android:layout_marginLeft="4dp"
                        android:inputType="textCapCharacters"
                        android:layout_weight="1"
                        android:id="@+id/btnSave"
                        android:text="Save Changes"
                        style="@style/button_forgotPassword" />

                </LinearLayout>
            </LinearLayout>

            <!-- Add baby start-->
            <LinearLayout
                android:id="@+id/addBabyLinearMain"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>
            <!-- Add baby start end -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
