<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/primaryColor</item>
        </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="both_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="both_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="both_match_wrap_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="full_button_red" parent="both_match_wrap_content">
        <item name="android:background">@color/color_button_darkred</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="full_button_white" parent="both_match_wrap_content">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/color_button_darkred</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="full_button_facebook" parent="both_match_wrap_content">
        <item name="android:background">@color/color_facebook</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="smallTextView" parent="both_match_wrap_content">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="normalTextView" parent="both_match_wrap_content">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_forgotPassword" parent="both_match_wrap_content">
        <item name="android:background">@drawable/drawable_forgot_password</item>
        <item name="android:textColor">#000000</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">@dimen/forgot_button_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="button_login" parent="both_match_wrap_content">
        <item name="android:background">@drawable/drawable_login</item>
        <item name="android:textColor">#000000</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">@dimen/forgot_button_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="edittext_login" parent="both_match_wrap_content">
        <item name="android:background">#EDEDED</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="full_imageView" parent="both_match_parent">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="imageViewHome" parent="both_wrap_content">

        <item name="android:layout_width">@dimen/homeScreenImageSize</item>
        <item name="android:layout_height">@dimen/homeScreenImageSize</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_user</item>

    </style>


</resources>